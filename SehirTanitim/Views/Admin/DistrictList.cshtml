@using System.Linq;

@model List<SehirTanitim.Models.District>
<h2>İlçeler</h2>
<table class="table table-bordered">
    <tr><th>ID</th><th>İlçe Adı</th><th>İşlemler</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a href="#" class="btn btn-warning">Düzenle</a>
                <a href="#" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
