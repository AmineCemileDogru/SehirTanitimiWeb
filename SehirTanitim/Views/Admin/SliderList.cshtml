@using System.Linq;

@model List<SehirTanitim.Models.SliderImage>
<h2>Slider Resimleri</h2>
<table class="table table-bordered">
    <tr><th>ID</th><th>Resim</th><th>İşlemler</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td><img src="@item.ImageUrl" style="max-width: 100px;" /></td>
            <td>
                <a href="#" class="btn btn-warning">Düzenle</a>
                <a href="#" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
