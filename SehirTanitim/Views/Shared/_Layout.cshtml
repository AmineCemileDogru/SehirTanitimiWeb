<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Eskişehir Tanıtım</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">Eskişehir</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Anasayfa</a></li>

                    @if (Session["UserRole"] != null)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Home/Nufus">Nüfus</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Ilceler">İlçeler</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/TuristikYerler">Turistik Yerler</a></li>

                        var role = Session["UserRole"]?.ToString();
                        if (role == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">Yönetim</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/Admin/SliderList">Slider</a></li>
                                    <li><a class="dropdown-item" href="/Admin/PopulationList">Nüfus</a></li>
                                    <li><a class="dropdown-item" href="/Admin/DistrictList">İlçeler</a></li>
                                    <li><a class="dropdown-item" href="/Admin/TouristPlaceList">Turistik Yerler</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="/Home/Hakkimizda">Hakkımızda</a></li>
                        }

                        <li class="nav-item"><a class="nav-link" href="/Login/Logout">Çıkış</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Login">Giriş</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
